local UIS = game:GetService("UserInputService")
local RS = game:GetService("ReplicatedStorage")
UIS.InputBegan:Connect(function(input, gp)
	if gp then return end
local plr = game.Players.LocalPlayer
local char = plr.Character
  if not char:FindFirstChild("SoldierBoy") then return end
local SB = char:FindFirstChild("SoldierBoy")
local remotes = RS.Characters.SoldierBoy.Remotes
local animator = char.Humanoid.Animator
local anims = SB.Animations
local CombatHitbox2 = game.ReplicatedStorage.Characters.Combat.Fx.CombatHitbox2

local Move1Run = animator:LoadAnimation(anims.MoveOneAnim)
local ChargeAnim = animator:LoadAnimation(anims.SoldierBoyCharge)
local RadBeam = animator:LoadAnimation(anims.Outburst)
local Move2Anim = animator:LoadAnimation(anims.MoveTwo)

local function MoveOne(mult)
  for i=1,mult do
    remotes.MoveOne:FireServer()
  end
    Move1Run:Play()
  local bv = Instance.new("BodyVelocity")
    bv.Parent = char.HumanoidRootPart
    bv.P = 3000
    bv.MaxForce = Vector3.new(1000000, 0, 1000000)
    bv.Velocity = char.HumanoidRootPart.CFrame.lookVector * 40
    game.Debris:AddItem(bv, 1)
  local hb = CombatHitbox2:Clone()
    hb.Parent = char
  local wd = Instance.new("Weld", hb)
    wd.Part0 = char.HumanoidRootPart
    wd.Part1 = hb
    wd.C0 = CFrame.new(0,0,0) * CFrame.Angles(0,0,0)
    game.Debris:AddItem(hb, 1)
    hb.Touched:Connect(function(part)
  local Parent = part.Parent
  local Humanoid = Parent:FindFirstChild("Humanoid")
    if Humanoid and Humanoid.Health ~= 0 then
      hb:Destroy()
      bv:Destroy()
      Move1Run:Stop()
    end
  end)
end

local function Counter()
  SB.DestroyCounter:FireServer()
  for i = 1, 3 do
    remotes.MoveThree:FireServer()	
  end
end

	if input.KeyCode == Enum.KeyCode.One then
      MoveOne(2)
	elseif input.KeyCode == Enum.KeyCode.Two then
	    Move2Anim:Play()
		for i = 1, 3 do
			remotes.MoveTwo:FireServer()
		end
	elseif input.KeyCode == Enum.KeyCode.Three then
	  Counter()
	elseif input.KeyCode == Enum.KeyCode.Five then
		remotes.Finisher:FireServer()
    elseif input.KeyCode == Enum.KeyCode.E then
        ChargeAnim:Play()
        SB.Steam:FireServer()
	elseif input.KeyCode == Enum.KeyCode.G then
      MoveOne(10)
	elseif input.KeyCode == Enum.KeyCode.H then
	    Move2Anim:Play()
		for i = 1, 15 do
			remotes.MoveTwo:FireServer()
		end
	elseif input.KeyCode == Enum.KeyCode.J then
      RadBeam:Play()
        for i=1,3 do
          remotes.Radiation:FireServer()
        end
	elseif input.KeyCode == Enum.KeyCode.K then
		RadBeam:Play()
        for i=1,5 do
          remotes.Radiation2:FireServer()
        end
	end
end)
